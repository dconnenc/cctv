{
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">=20",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "dev": "foreman start -f Procfile.dev",
    "format": "prettier --write \"{app,config,lib,public}/**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}\"",
    "format:check": "prettier --check \"{app,config,lib,public}/**/*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}\"",
    "prepare": "husky",
    "shadcn": "yarn dlx shadcn@latest",
    "tailwind:build": "tailwindcss -i ./app/frontend/tailwind.css -o ./app/frontend/tailwind.output.css",
    "tailwind:watch": "tailwindcss -i ./app/frontend/tailwind.css -o ./app/frontend/tailwind.output.css -w"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@tailwindcss/cli": "^4.1.17",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.554.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.26.2",
    "shadcn": "^3.5.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^24.3.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.3.3",
    "sass": "^1.92.1",
    "vite": "^5.4.21",
    "vite-plugin-ruby": "^5.1.1"
  }
}
